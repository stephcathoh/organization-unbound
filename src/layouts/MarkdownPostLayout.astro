---
import BaseHead from "../components/BaseHead.astro";
import BaseLayout from "./BaseLayout.astro";
import Sidebar from "../components/Sidebar.astro";
import FormattedDate from "../components/FormattedDate.astro";
import type { CollectionEntry } from "astro:content";
import { getCollection} from "astro:content";


type Props = CollectionEntry<"blog">["data"];

const { title, pubDate, author, responsesNumber, authorPic, responses } =
  Astro.props;

  
const relatedComments = await getCollection('comments');

const contributorLink = (
await getCollection(
"contributors",

({ data }: CollectionEntry<'contributors'>) => data.contributorUrl))



---

<style>
  main {
    max-width: 700px;
    background-color: #ffffff;
    margin-left: 10%;
    padding: 1rem 2rem;
    background: #fff;
    height: 100%;
    oveflow: none;
  }

  .title {
    margin-bottom: 1em;
    padding: 2em 0;
    text-align: left;
    line-height: 1;
    font-family: "Noto Serif Georgian Variable", serif;
  }
  .title h1 {
    margin: 0 0 0.5em 0;
    font-family: "Warsaw Gothic";
    font-size: 3rem;
  }

  a {
    text-decoration: none;
  }

  .date {
    margin-bottom: 0.5em;
    color: rgb(var(--gray));
  }

  .last-updated-on {
    font-style: italic;
  }

  .hero-image img {
    float: right;
  }

  img [alt="archive file with hearts"] {
    float: right !important;
  }

  #details a {
    color: #fff;
    text-decoration: none;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }
  .details-panel {
    background-color: #000;
    color: #fff;
    margin-top: 2.5rem;
    padding: 0 0.5rem;
  }

  #details {
    font-size: 14px;
    padding: 0 0.25em;
  }
  #comments {
    font-size: 14px;
  }

  h1 {
    margin: 0 auto;
    padding: 1rem 0 0 0;
    text-transform: uppercase;
    font-weight: 700;
    font-family: "Warsaw Gothic";
    color: var(--gray-0);
  }

  h2.author-panel {
    font-family: "Warsaw Gothic";
    font-size: 19px;
    font-weight: 700;
    text-transform: uppercase;
    padding-bottom: 0;
  }

  h2.author-panel .commenter {
    grid-row: start;
  }
  h3 {
    font-size: 16px;
    font-weight: 400;
    font-style: italic;
  }

  hr {
    padding: 0.25rem 1rem;
    border-top: 1px dotted #666;
  }

  .grid-container {
    display: grid;
    grid-template-columns: 78px 2fr;
    grid-gap: 0.5rem;
    grid-template-rows: 1.5rem;
    row-gap: 0;
  }

  .grid-container > img {
    grid-column: 1 / -1;
    grid-row: 1/3;
    height: 78px;
    width: 78px;
  }

  img .comment {
    padding-bottom: 0.5rem;
  }

  .author-panel {
    padding-bottom: 2em;
    grid-column: 2;
  }

  .author-panel .commenter {
    font-size: 14px;
    grid-column: 1/2;
    grid-row: 2/4;
    text-align: right;
    line-height: 1.2;
    margin-top: 3.5rem;
  }

  .author-panel .commenter a {
    text-decoration: none;
    color: #61a9c1;
    font-weight: 900;
  }

  h3.author-panel {
    padding-bottom: 0.25rem;
    margin-left: 0;
    grid-column: 2/2;
    grid-row: 1/2;
  }

  .author-deets {
    font-size: 14px;
    padding-top: -0;
    grid-column: 2/2;
    grid-row: 2/2;
  }
  .comment-panel {
    padding-bottom: 2em;
    grid-column: 2/2;
  }

  h2.comment-panel {
    font-family: "Warsaw Gothic";
    font-size: 19px;
    font-weight: 700;
    text-transform: uppercase;
    padding-bottom: 0;
  }

  h3.comment-panel {
    padding-bottom: 0.25rem;
    margin-left: 0;
  }

  .comment-deets {
    font-size: 14px;
    padding-top: -0;
  }

  .comment-box {
    padding: 1rem;
    margin-left:1rem;
    background: #f8f8f8;
    border: 1px solid #dbdbdb;
    grid-column: 2/2;
    grid-row: 1/4;
  }

  .comment-date{
    font-size:14px;
    line-height:0.75;
    display:inline-block;
  }

  .comment-box p {
    font-size: 14px;
    font-family: Arial;
  }
</style>
<BaseLayout>
  <Sidebar />

  <main>
    <h1>{title}</h1>
    <hr />
    <slot />
    <div class="details-panel">
      <p>
        <span id="details"><FormattedDate date={pubDate} />|</span>
        <span id="details">{author}</span> |
        <span id="details">{responsesNumber} Comments</span>
      </p>
    </div>

    <hr />
    <h2 class="author-panel">About the Author</h2>
    <div class="author-panel grid-container">
      <img src={authorPic} />
      <h3 class="author-panel">{author}</h3>
      <span class="author-deets">Click <a href="{contributors.map(contributor)=>{contributorUrl}}">here</a> to learn more about me.</span
      >
    </div>

    <hr />
    <h2 class="comment-panel">{responses}</h2>

      <div class="author-panel grid-container">
        
        { relatedComments.map((comment) => (
          
        <img src={comment.data.authorAvatar} class="comment" />
            <p class="author-panel commenter">
              <a href={comment.data.authorUrl}>{comment.data.commenterName}</a>
              <span>{comment.data.date}</span>
            </p>
            <div class="comment-box">
              <p>{comment.data.html}</p>
            </div>
          
        
      
    ))
  }
          
        
    
    </div>
    <hr />
  </main>
</BaseLayout>
