---
import BaseHead from '../components/BaseHead.astro';
import BaseLayout from './BaseLayout.astro'
import Sidebar from '../components/Sidebar.astro'
import FormattedDate from "../components/FormattedDate.astro";
//import { getEntry } from 'astro:content';


const { frontmatter } = Astro.props;

---
<style>
main {
		max-width:700px;
		background-color: #ffffff;
		margin-left:10%;
		padding:1rem 2rem;
		background:#fff;
		height:100%;
		oveflow:none;
	}


  .title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: left;
				line-height: 1;
				font-family: 'Noto Serif Georgian Variable', serif;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
				font-family: 'Warsaw Gothic';
				font-size: 3rem;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}

					.hero-image img {
				float:right;
			}

			img [alt="archive file with hearts"] {
				float:right!important;

			}

       #details a{
    color: #fff;
    text-decoration:none;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }
  .details-panel{
    background-color:#000;
    color:#fff;
    margin-top:2.5rem;
    padding:0 0.5rem;
  }

  #details {
    font-size:14px;
    padding: 0 0.25em;
  }
  #comments {
    font-size:14px;
  }

  h1 {
    margin: 0 auto;
		padding:1rem 0 0 0;
    text-transform: uppercase;
    font-weight: 700;
		font-family: 'Warsaw Gothic';
		color: var(--gray-0);
			}

  h2.author-panel{
    font-family: 'Warsaw Gothic';
    font-size: 19px;
    font-weight:700;
    text-transform:uppercase;
    padding-bottom:0;
    
  }
  h3 {
    font-size:16px;
    font-weight:400;
    font-style:italic;
  }

  hr {
		padding: 0.25rem 1rem;
    border-top:1px dotted #666;
	}

  .grid-container {
    display: grid;
    grid-template-columns: 78px 1fr;
    grid-gap:0.5rem;
    grid-template-rows:1.5rem;
    row-gap:0;
}

img {
  grid-row:span 2;
}

  .author-panel {
    padding-bottom:2em;
  }

  h3.author-panel{
    padding-bottom:0.25rem;
    margin-left: 0;
  }

  .author-deets {
    font-size:14px;
    padding-top:-0;
  }
  .comment-panel {
    padding-bottom:2em;
  }

  h2.comment-panel {
    font-family: 'Warsaw Gothic';
    font-size: 19px;
    font-weight:700;
    text-transform:uppercase;
    padding-bottom:0;
  }

  h3.comment-panel{
    padding-bottom:0.25rem;
    margin-left: 0;
  }

  .comment-deets {
    font-size:14px;
    padding-top:-0;
  }

</style>
<BaseLayout>
  <Sidebar/>
  
  <main>
<h1>{frontmatter.title}</h1>
<hr>
  <slot />
  <div class="details-panel">
  <p>
  <span id="details"><FormattedDate date={frontmatter.pubDate} />|</span>
  <span id="details">{frontmatter.author}</span> |
  <span id="details">{frontmatter.responsesNumber} Comments</span>
  </p>
  </div>
 
  <hr>
  <h2 class="author-panel">About the Author</h2>
  <div class="author-panel grid-container">
    <img src={frontmatter.authorPic}/> <h3 class="author-panel">{frontmatter.author}</h3><span class="author-deets">Click <a href="">here</a> to learn more about me.</span>
   
  </div>
 
  <hr>
  <h2 class="comment-panel">{frontmatter.responses}</h2>
  <div class="author-panel grid-container">
    
       <img src="/gravatar.webp"/> <h3 class="author-panel"></h3><span class="author-deets"></span>
  

   
  </div>
  <hr>
</main>
</BaseLayout>

